<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.project.brunch.domain.post.PostMapper">
  
  	<!-- findAllPost : 메인 포스트 목록 뿌리기 -->
	<select id="findAllPost" resultType="com.project.brunch.web.dto.post.PostRespDto"> 
			SELECT * FROM post p INNER JOIN user u
	</select>
  
 	<!-- 작가의 서랍 포스트 목록 뿌릴 때 사용하기
	<select id="findByWriterPost" resultType="com.project.brunch.web.dto.PostRespDto"> 
			SELECT * FROM post p INNER JOIN user u ON p.userId = u.id
	</select> -->
  
	<update id="updateByPost">
		SELECT coverImg FROM post WEHRE id=#{id}
	</update>
  
</mapper>
