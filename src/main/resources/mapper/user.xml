<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.project.brunch.domain.user.UserMapper">
  <select id="findByUser" resultType="com.project.brunch.domain.user.User">
    SELECT snsId, profileImage, nickName, userRole FROM user
  </select>
  
  <select id="findByDelUserEmail" resultType="com.project.brunch.domain.user.User">
  	SELECT email From user WHERE id = #{id}
  </select>
  
  <delete id ="deleteById">
  	DELETE FROM post WHERE id = #{id}
  </delete>
  
  <select id="findByUserEmail" resultType="com.project.brunch.domain.user.User">
  	SELECT * FROM user WHERE email =#{email}
  </select>
  
</mapper>
